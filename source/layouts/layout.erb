<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>
  
  <body class="<%= page_classes %>">
    <div class='container'>
      <%= yield %>
    </div>
    <div class='footer'>
      <div class='container'>
        <div>
          For bookings and enquires get in touch with us at
          <a href='mailto:contactwirebird@gmail.com'>
            contactwirebird@gmail.com
          </a>
        </div>
        <div>
          <a href='http://www.instagram.com/wirebirdmelbourne' class="btn social-link" target="_blank">
            <i class='fa fa-instagram'></i>  
          </a>
          <a href='http://www.facebook.com/wire.bird' class="btn social-link" target="_blank">
            <i class='fa fa-facebook-square'></i>  
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
